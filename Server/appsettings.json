{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=Functions;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "CORS": {
    "Allowed": [
      "https://localhost:44311/"
    ]
  },
  "JwtSettings": {
    "Key": "YourSecretKeyHereMakeItLongAndComplex",
    "Issuer": "FunctionsApp",
    "Audience": "FunctionsClient",
    "DurationInMinutes": 1440
  },
  "Lucene": {
    "IndexPath": "lucene_index"
  },
  "AllowedHosts": "*"
}
